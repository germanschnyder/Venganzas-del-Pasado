!!!
%html{ :lang => "es" }

  %head
    %meta{ :charset => 'utf-8'}
    %meta{ 'http-equiv' => 'X-UA-Compatible', 'content' => 'IE=edge' }
    %meta{ 'name' => 'viewport', 'content' => 'width=device-width, initial-scale=1' }

    %title= yield :title

    %meta{ :name => "description", :content => @meta_description || "El sitio donde podés escuchar online y descargar los archivos de audio en MP3 del programa La Venganza será Terrible de Alejandro Dolina." }

    /[if lt IE 9]
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>

    = stylesheet_link_tag "application"
    = stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.1.0/codemirror.css'
    = favicon_link_tag '/favicon.ico'
    = csrf_meta_tag

    - if Rails.env.production?
      = render 'analytics'

  %body{ :class => body_class('is-admin') }

    = render 'topbar'
    = render 'header'
    .container.main
      .row
        #content.col-md-9
          = show_alerts
          = yield
        .col-md-3
          = render 'sidebar'

    = javascript_include_tag "application"

    %script{ src: 'https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.1.0/codemirror.min.js' }
    %script{ src: 'https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.1.0/addon/edit/continuelist.min.js' }
    %script{ src: 'https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.1.0/mode/xml/xml.min.js' }
    %script{ src: 'https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.1.0/mode/markdown/markdown.min.js' }
    %script{ src: 'https://cdnjs.cloudflare.com/ajax/libs/marked/0.3.2/marked.min.js' }
